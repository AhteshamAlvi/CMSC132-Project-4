package game;
import java.awt.Color;
import java.awt.Graphics;

public class Border {
    private int gameWidth;
    private int gameHeight;
    private int borderWidth;
    private Color borderColor;

    public Border(int gameWidth, int gameHeight, int borderWidth, Color borderColor) {
        this.gameWidth = gameWidth;
        this.gameHeight = gameHeight;
        this.borderWidth = borderWidth;
        this.borderColor = borderColor;
    }

    public void paint(Graphics brush) {
    	int borderWidth = 10; 
    	int topOffset = 20; 
    	brush.setColor(Color.WHITE); 
    	brush.fillRect(0, topOffset, gameWidth, borderWidth);
    	brush.fillRect(0, topOffset, borderWidth, gameHeight - topOffset - borderWidth);
    	brush.fillRect(gameWidth - borderWidth, topOffset, borderWidth, gameHeight - topOffset - borderWidth);
    	brush.fillRect(0, 562, gameWidth, borderWidth);
    	
    }
}

